		cs_expr_bitwise( ExprBitwise._expr_bitwise )
		send Output [A]
		cs_expr_factor_op( ExprBitwise.expr_factor_op )
	}
	elsif match ExprBitwise [expr_factor_op]
	{
		cs_expr_factor_op( ExprBitwise.expr_factor_op )
	}
}

