INCS += -I../common -I../redfsm -I../aapl
DEFS +=

CFLAGS += -g -Wall
LDFLAGS +=

CC_SRCS = main.cpp javacodegen.cpp

LIBS = ../common/common.a ../redfsm/redfsm.a

LIBS += @LIBS@
prefix = @prefix@

#*************************************

# Programs
CXX = @CXX@

# Get objects and dependencies from sources.
OBJS = $(CC_SRCS:%.cpp=%.o)
DEPS = $(CC_SRCS:%.cpp=.%.d)

# Get the version info.
include ../version.mk

# Rules.
all: rlgen-java

rlgen-java: $(LIBS) $(OBJS)
	$(CXX) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

%.o: %.cpp
	@$(CXX) -M $(DEFS) $(INCS) $< > .$*.d
	$(CXX) -c $(CFLAGS) $(DEFS) $(INCS) -o $@ $<

distclean: clean
	rm -f Makefile

clean:
	rm -f tags .*.d *.o rlgen-java

install: all
	install -d $(prefix)/bin
	install -s rlgen-java $(prefix)/bin/rlgen-java

-include $(DEPS)
